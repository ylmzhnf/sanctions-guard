generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  extensions = [pg_trgm]
}

model User {
  id        Int        @id @default(autoincrement())
  email     String    @unique
  password  String
  role      String    @default("USER")
  logs      AuditLog[]    
}

model SanctionList {
  id          Int        @id @default(autoincrement())
  fullName    String
  source      String
  reason      String?   @db.Text
  country     String?
  type        String?
  externalId  String?   @unique
  createdAt   DateTime  @default(now())

  logs        AuditLog[]

  @@index([fullName(ops: raw("gin_trgm_ops"))], type: Gin)
}

model AuditLog {
  id                Int        @id @default(autoincrement())
  timestamp         DateTime  @default(now())
  queriedName       String    
  matchedName       String?
  similarityScore   Float?

  // İlişkiler

  userId            Int
  user              User    @relation(fields: [userId], references: [id])
  sanctionId        Int?
  sanction          SanctionList? @relation(fields: [sanctionId], references: [id])
}